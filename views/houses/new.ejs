<% layout('layouts/boilerplate')  %> 
    <div class="row">
        <div class="col-md-6 offset-md-3 my-3">
            <div class="formAuth">
                <h1 class="text-center">Create new Guest House</h1>
                <form action="/houses" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="location"class="form-label">Location</label>
                        <input type="text" id="location" name="location" class="form-control" required>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="price" required>
                        <span class="input-group-text">.00</span>
                      </div>
                    <div class="mb-3">
                        <label for="description"class="form-label">Description</label>
                        <textarea rows="3" cols="20" id="description" name="description"class="form-control" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Choose image(s)</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                    <button class="btn btn-success">Add guest house</button>
                </form>
            </div>
            
        </div>
    </div>